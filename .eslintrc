{
  "extends": [
    "eslint:recommended",
    "plugin:flowtype/recommended"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 8,
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    },
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "worker": true
  },
  "plugins": [
    "react",
    "flowtype"
  ],
  "globals": {
    "window": true
  },
  "rules": {
    "semi": [
      "error",
      "always"
    ],
    "curly": 2,
    "eqeqeq": 2,
    "no-console": 0,
    "new-cap": 2,
    "strict": 0,
    "no-underscore-dangle": 2,
    "quotes": [
      "error",
      "double",
      {
        "allowTemplateLiterals": true
      }
    ],
    "react/jsx-no-bind": [
      "error",
      {
        "allowArrowFunctions": true
      }
    ],
    "jsx-quotes": 2,
    "react/jsx-no-undef": 2,
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react/prop-types": [
      2,
      {
        "ignore": [
          "className",
          "children"
        ]
      }
    ],
    "react/jsx-key": [
      2
    ],
    "react/jsx-pascal-case": [
      2,
      {
        "allowAllCaps": true,
        "ignore": []
      }
    ],
    "array-callback-return": 2,
    "dot-notation": 2,
    "no-alert": 2,
    "no-eq-null": 2,
    "no-empty": 2,
    "no-ternary": 0,
    "no-multiple-empty-lines": [
      2,
      {
        "max": 1
      }
    ],
    "no-empty-function": 2,
    "no-eval": 2,
    "no-extend-native": 2,
    "no-floating-decimal": 2,
    "no-invalid-this": 2,
    "no-lone-blocks": 2,
    "no-loop-func": 2,
    "no-magic-numbers": [
      2,
      {
        "ignoreArrayIndexes": true,
        "ignore": [
          -1,
          0,
          1,
          2,
          10,
          100
        ]
      }
    ],
    "no-multi-spaces": 2,
    "no-multi-str": 2,
    "no-native-reassign": 2,
    "no-param-reassign": 2,
    "no-proto": 2,
    "no-redeclare": 2,
    "no-script-url": 2,
    "no-self-assign": 2,
    "no-self-compare": 2,
    "no-sequences": 2,
    "no-throw-literal": 2,
    "no-unused-expressions": 2,
    "no-void": 2,
    "yoda": 2,
    "no-shadow": 2,
    "no-unused-vars": [
      2,
      {
        "vars": "all",
        "args": "after-used"
      }
    ],
    "no-use-before-define": 2,
    "array-bracket-spacing": [
      2,
      "never"
    ],
    "camelcase": [
      2,
      {
        "properties": "always"
      }
    ],
    "brace-style": 2,
    "quote-props": [
      "error",
      "as-needed",
      {
        "keywords": true
      }
    ],
    "comma-spacing": [
      2,
      {
        "before": false,
        "after": true
      }
    ],
    "comma-style": [
      2,
      "last"
    ],
    "consistent-this": [
      2,
      "self"
    ],
    "eol-last": 2,
    "indent": [
      2,
      2,
      {
        "SwitchCase": 1,
        "FunctionExpression": {
          "parameters": "first"
        }
      }
    ],
    "key-spacing": [
      2,
      {
        "beforeColon": false,
        "afterColon": true
      }
    ],
    "keyword-spacing": [
      2,
      {
        "overrides": {
          "if": {
            "after": true
          },
          "for": {
            "after": false
          },
          "while": {
            "after": false
          }
        }
      }
    ],
    "no-trailing-spaces": 2,
    "linebreak-style": [
      2,
      "unix"
    ],
    "new-parens": 2,
    "no-confusing-arrow": 2,
    "no-const-assign": 2,
    "no-dupe-class-members": 2,
    "prefer-template": 2
  }
}
